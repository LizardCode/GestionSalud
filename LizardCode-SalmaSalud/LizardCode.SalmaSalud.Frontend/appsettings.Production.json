{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "AppSettings": {
    "Cryptography": {
      "Key": "${CRYPTOGRAPHY_KEY}",
      "Salt": "${CRYPTOGRAPHY_SALT}"
    },

    "WSAA-URL": "https://wsaa.afip.gov.ar/ws/services/LoginCms",
    "WSFE-URL": "https://servicios1.afip.gov.ar/wsfev1/service.asmx",
    "WSCDC-URL": "https://servicios1.afip.gov.ar/WSCDC/service.asmx",
    "PADRON-URL": "https://aws.afip.gov.ar/sr-padron/webservices/personaServiceA5",
    "MAPS-KEY": "${GOOGLE_MAPS_API_KEY}",
    "AFIP-PK": "${AFIP_PRIVATE_KEY}",
    "AFIP-CRT": "${AFIP_CERTIFICATE}",
    "AFIP-CUIT": "${AFIP_CUIT}",

    "Impresiones": {
      "DrawRulers": false,
      "Facturas": {
        "JsonPath": "~/wwwroot/template/pdf/factura.json",
        "JsonPathOtros": "~/wwwroot/template/pdf/facturaOtros.json"
      },
      "OrdenesPago": {
        "JsonPath": "~/wwwroot/template/pdf/ordenPago.json"
      },
      "Recibos": {
        "JsonPath": "~/wwwroot/template/pdf/recibo.json"
      },
      "Retenciones": {
        "JsonPath": "~/wwwroot/template/pdf/retenciones.json",
        "Titulo": "COMPROBANTE DE RETENCIÓN",
        "Texto": "Se extiende el presente certificado de acuerdo a lo establecido en la RESOLUCION GENERAL 830 y sus modificaciones, en concepto de:",
        "Footer": "Declaro que los datos consignados en este formulario son correctos y completos y que he confeccionado la presente sin omitir ni falsear dato alguno que deba contener, siendo fiel expresión de la verdad."
      },
      "QR_AFIP": {
        "Enabled": true,
        "Url": "https://www.afip.gob.ar/fe/qr/?p=",
        "Position_X": 510,
        "Position_Y": 62,
        "Width": 68,
        "Height": 68
      },
      "Recetas": {
        "JsonPath": "~/wwwroot/template/pdf/receta.json",
        "JsonPathIndicaciones": "~/wwwroot/template/pdf/recetaIndicaciones.json",
        "DiasVencimiento": 30
      },
      "Ordenes": {
        "JsonPath": "~/wwwroot/template/pdf/orden.json",
        "DiasVencimiento": 30
      }
    },

    "Captcha": {
      "Enabled": "true",
      "IPSeconds": "5",
      "IPAttempts": "10",
      "Seconds": "30",
      "Attempts": "3",
      "UserAndIPAsCacheKey": "true",
      "VerifyUrl": "https://www.google.com/recaptcha/api/siteverify?secret=[SECRET_KEY]&response=[RESPONSE]",
      "SiteKey": "${RECAPTCHA_SITE_KEY}",
      "PrivateKey": "${RECAPTCHA_PRIVATE_KEY}"
    },

    "Turnos": {
      "HoraInicio": "07:30",
      "HoraFin": "18:00",
      "Intervalo": "60"
    },

    "ChatApi": {
      "Url": "${CHATAPI_URL}",
      "User": "${CHATAPI_USER}",
      "Password": "${CHATAPI_PASSWORD}"
    },

    "SendGrid": {
      "ApiKey": "${SENDGRID_API_KEY}",
      "From": "${SENDGRID_FROM_EMAIL}",
      "FromName": "${SENDGRID_FROM_NAME}"
    },

    "Pacientes": {
      "TemplateBienvenida": "template\\mail\\bienvenidaPaciente.html",
      "TemplateCodigoAcceso": "template\\mail\\codigoAccesoPaciente.html",
      "TemplateRecetas": "template\\mail\\recetasPaciente.html",
      "TemplateTurnoAsignado": "template\\mail\\turnoAsignado.html",
      "TemplateSolicitudTurnoCancelada": "template\\mail\\solicitudTurnoCancelada.html"
    },

    "ForceBrandDomain": true,
    "DefaultBrandDomain": "${DEFAULT_BRAND_DOMAIN}",

    "WAppApi": {
      "Url": "${WAPPAPI_URL}",
      "Token": "${WAPPAPI_TOKEN}"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_CONNECTION_STRING}"
  }
}