@{
    Layout = null;

    var tipoUsuario = (TipoUsuario)ViewBag.UsuarioSesion.IdTipoUsuario;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="cache-control" content="max-age=0" />
