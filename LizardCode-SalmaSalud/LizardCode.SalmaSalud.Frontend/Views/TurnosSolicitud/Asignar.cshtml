@using System.Text.RegularExpressions
@model LizardCode.SalmaSalud.Application.Models.TurnosSolicitud.AsignarViewModel
@{
    Layout = null;

    ViewBag.AjaxAsignar = Url.Action("Asignar", "TurnosSolicitud");
    ViewBag.MainClass = "TurnosAsignarView";
}

<style>
    .flatpickr-time {
        height: auto!important;
    }
</style>

<div class="modal-header">
    <h5 class="modal-title">Asignar Turno</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="fa fa-times"></span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col">
            <div class="card">
                @*<div class="card-header p-b-0 azulClaro">
                <h6 class="card-title"><i class="fa fa-calendar"></i>  </h6>
                </div>*@
                <div class="card-body">

                    @using (Html.AjaxBeginForm((string)ViewBag.AjaxAsignar, (string)ViewBag.MainClass, begin: "ajaxAsignarBegin", success: "ajaxAsignarSuccess", failure: "ajaxAsignarFailure", css: "frmAsignar"))
                    {
                        @Html.HiddenFor(m => m.IdTurnoSolicitud, new { @class = "hdnIdTurno" })
                        <div class="col">
                            @Html.FormGroupPickerDateFor(m => m.Fecha, title: "", placeholder: "Fecha Turno", colSize: "col-md-6", addValidator: true, editingDisabled: false)
                            
                            <div class="row">
                                @Html.FormGroupTextAreaFor(m => m.Observaciones, title: "Observaciones", rows: 4)
                            </div>
                       
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-default"><i class="fa fa-times"></i> CERRAR</button>
    <button type="button" class="btn btn-success btSave"><i class="fa fa-check"></i> ASIGNAR</button>
</div>


<script src="/js/Views/TurnosSolicitud/asignar.js?1361"></script>