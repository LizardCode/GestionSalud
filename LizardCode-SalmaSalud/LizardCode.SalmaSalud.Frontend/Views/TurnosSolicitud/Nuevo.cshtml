@using System.Text.RegularExpressions
@model LizardCode.SalmaSalud.Application.Models.TurnosSolicitud.NuevoViewModel
@{
    Layout = null;

    ViewBag.AjaxNuevo = Url.Action("Nuevo", "TurnosSolicitud");
    ViewBag.MainClass = "TurnosNuevoView";
}

<style>
    .flatpickr-time {
        height: auto!important;
    }
</style>

<div class="modal-header">
    <h5 class="modal-title">Nuevo Turno</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="fa fa-times"></span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col">
            <div class="card">
                @*<div class="card-header p-b-0 azulClaro">
                <h6 class="card-title"><i class="fa fa-calendar"></i>  </h6>
                </div>*@
                <div class="card-body">
                    @using (Html.AjaxBeginForm((string)ViewBag.AjaxNuevo, (string)ViewBag.MainClass, begin: "ajaxNuevoBegin", success: "ajaxNuevoSuccess", failure: "ajaxNuevoFailure", css: "frmNuevo"))
                    {
                        <div class="col">
                            @Html.FormGroupDropDownListFor(m => m.IdPaciente, Model.MaestroPacientes, "Pacientes", fieldCss: "select2-field validate paciente", addValidator: true)
                            @Html.FormGroupDropDownListFor(m => m.IdEspecialidad, Model.MaestroEspecialidades, "Especialidades", fieldCss: "select2-field validate especialidad", addValidator: true)
                            @Html.FormGroupPickerDateFor(m => m.Fecha, title: "", placeholder: "Fecha Turno", colSize: "col-md-4", addValidator: true, editingDisabled: false)
                            @Html.FormGroupDropDownListFor(m => m.IdProfesional, Model.MaestroProfesionales, "Profesional", fieldCss: "select2-field validate profesional", addValidator: true)
                            <div class="row">
                                @Html.FormGroupTextAreaFor(m => m.Observaciones, title: "Observaciones", rows: 4)
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-default"><i class="fa fa-times"></i> CERRAR</button>
    <button type="button" class="btn btn-success btSave"><i class="fa fa-check"></i> ASIGNAR</button>
</div>


<script src="/js/Views/TurnosSolicitud/nuevo.js?1361"></script>