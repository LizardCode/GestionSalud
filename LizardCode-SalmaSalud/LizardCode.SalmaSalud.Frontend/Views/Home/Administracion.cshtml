}

    <div class="@ViewBag.MainClass" data-mainclass="@ViewBag.MainClass">

        <div class="row layout-top-spacing">
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12 layout-spacing">
                <div class="widget widget-card-four">
                    <div class="widget-content">
                        <div class="w-header">
                            <div class="w-info">
                                <div class="row">
                                    <div class="col-md-10">
                                        <h6 class="value">Facturas (mes actual)</h6>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="badge badge-primary wBadgeStatus bFacturas" style="cursor: pointer;">TOTAL</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="w-content">
                                    <div class="w-info">
                                        <img id="FacturasLoader" alt="" src="/img/mini_loader.gif" width="75px;">
                                        <p class="value text-info pFacturas" style="display: none;"> [VALUE]<i class="fas fa-primary-circle ml-2 fa-info-dashboard" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Total"></i></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12 layout-spacing">
