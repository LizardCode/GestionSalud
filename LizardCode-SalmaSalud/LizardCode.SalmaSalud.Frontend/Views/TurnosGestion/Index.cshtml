@model LizardCode.SalmaSalud.Application.Models.Turnos.TurnoGestionViewModel
@{
    Layout = "~/Views/Shared/MaestroLayout.cshtml";

    ViewBag.MainClass = "ABMProfesionalesView";

    ViewBag.Title = "Turnos";
    ViewBag.TitleNew = "...";
    ViewBag.TitleEdit = "...";
    ViewBag.TitleRemove = "...";
    ViewBag.ItemMenu = "Turnos";
    ViewBag.RemoveListadoDe = true;

    ViewBag.ButtonNew = false;
    ViewBag.ButtonEdit = false;
    ViewBag.ButtonRemove = false;

    ViewBag.AjaxGetAll = Url.Action("ObtenerTodos", "TurnosGestion");
}

@section Styles {
    <link href="/css/Views/Turnos/index.css?3661" rel="stylesheet" />
}

@section ToolbarButtons {

    <button type="button" class="btn btn-primary btNuevoTurno" title="Nuevo Turno" style="display: none;"><i class="fas fa-plus"></i> <span>Nuevo</span></button>
    <button type="button" class="btn btn-danger btCancelarAgenda" title="Cancelar Agenda" style="display: none;"><i class="fas fa-calendar-times"></i> <span>Cancelar Agenda</span></button>
    @* <button type="button" class="btn btn-warning btDemandaEspontanea" title="Demanda Espontánea" style="display: none;"><i class="fas fa-forward"></i> <span>Demanda Espontánea</span></button> *@
}

@section Filters {
    <div class="col">

        <div class="row">
            @Html.FilterDropDownListFor(m => m.IdEspecialidad, Model.MaestroEspecialidades, "Especialidad", colSize: "col-md-4")
            @Html.FilterDropDownListFor(m => m.IdProfesional, Model.MaestroProfesionales, "Profesional", colSize: "col-md-4")
        </div>

        <div class="row">
            @Html.FilterPickerDateFor(m => m.FechaDesde, "Fecha Desde", value: Model.FechaDesde.ToString("dd/MM/yyyy"), colSize: "col-md-2")
            @Html.FilterPickerDateFor(m => m.FechaHasta, "Fecha Hasta", value: Model.FechaHasta.ToString("dd/MM/yyyy"), colSize: "col-md-2")
        </div>
    
    </div>
}

@section GridColumns {

    <th>Fecha</th>
    <th>Hora</th>
    <th>Paciente</th>
    <th>Profesional</th>
    <th>Estado</th>
    <th>Contacto</th>
    @* <th>Cobertura</th> *@
    <th>Acciones</th>
    <th></th>
    <th></th>

}

@section CrudForm {


}

@section Scripts {
    <script>
        var MVC_FILTRO = "@ViewBag.MVC_Filtro";
    </script>

    <script src="/js/Shared/modals.js?3661"></script>
    <script src="/js/Helpers/bootstrap-datepicker.helper.js?3661"></script>
    <script src="/js/Views/TurnosGestion/index.js?3661"></script>
}
