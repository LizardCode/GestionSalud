@using System.Text.RegularExpressions
@model LizardCode.SalmaSalud.Application.Models.Turnos.DetalleViewModel
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">PRIMEROS @Model.Cantidad TURNOS disponibles</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="fa fa-times"></span>
    </button>
</div>
<div class="modal-body">      
    <div class="row">
        <div class="col">            
            <div class="card">
                @*<div class="card-header p-b-0 azulClaro">
                    <h6 class="card-title"><i class="fa fa-calendar"></i>  </h6>
                </div>*@
                <input type="hidden" id="hdnPrimerosTurnosDisponiblesCantidad" value="@Model.Turnos.Count" />
                <div class="card-body">                                    
                    <div class="col">
                        <div class="alert alert-primary text-center" role="alert">
                            <b>@string.Format("PRIMEROS {0} TURNOS para {1}.", @Model.Cantidad, @Model.Especialidad.ToUpperInvariant())</b>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <table class="@string.Format("table table-striped dt-view dataTable dtHistorial", "00")" width="100%">
                                <thead>
                                    <tr>
                                        <th>Profesional</th>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th style="text-align:center;">
                                            Agendar
                                        </th>
                                        @*<th style="word-wrap:break-word">Observaciones</th>*@
                                    </tr>                                    
                                </thead>
                                <tbody>
                                    @foreach(var turno in Model.Turnos)
                                    {
                                        <tr>
                                            <td>@turno.Profesional</td>
                                            <td>@turno.Fecha</td>
                                            <td>@turno.Hora</td>
                                            <td style="text-align:center;">
                                                <span class="btn badge badge-primary agendarTurno" alt="Agendar" data-id-profesional-turno="@turno.IdProfesionalTurno" data-hora-turno="@turno.Hora" data-fecha-turno="@turno.Fecha"><i class="fas fa-calendar-check"></i></span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>        
		        </div>
	        </div>
        </div>
    </div>    
</div>
