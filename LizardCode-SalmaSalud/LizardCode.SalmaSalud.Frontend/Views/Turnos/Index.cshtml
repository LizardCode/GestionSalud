                        </div>
                        <div class="card-body p-0">
                            <div class="row">
                                @Html.FormGroupDropDownListFor(m => m.IdEspecialidad, Model.MaestroEspecialidades, "Especialidades", fieldCss: "s2Especialidades", colSize: "col-md-5")
